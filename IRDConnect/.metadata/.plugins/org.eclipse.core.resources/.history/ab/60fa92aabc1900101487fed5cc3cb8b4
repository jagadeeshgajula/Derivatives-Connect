#include "swapDeal.h"
#include "swapLeg.h"

static String _PAY = "LONG";
static String _RECV = "SHORT";
static String _FIXLEG = "FIXED";
static String _FLTLEG = "FLOAT";

using namespace IRDConnect;

namespace IRDConnect {


SwapDeal::SwapDeal()
{
	// do nothing
}

SwapDeal::~SwapDeal()
{
	// do nothing
}

